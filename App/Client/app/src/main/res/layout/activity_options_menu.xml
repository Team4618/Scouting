<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="team4618.scoutingapp.client.optionsMenu">

    <Button
            android:text="Add to MAC whitelist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnMACWhitelist" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="gotoWhiteListMAC"
            app:layout_constraintStart_toEndOf="@+id/btnRmvMAC"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnRmvMAC"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    <Button
            android:text="Remove From MAC Whitelist"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btnRmvMAC"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/btnMACWhitelist" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:onClick="gotoRemoveMAC"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Adress"
            android:ems="10"
            android:id="@+id/MACtxt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:visibility="gone" android:singleLine="true"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnAddWhteList" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/MACtxt" app:layout_constraintEnd_toEndOf="@+id/MACtxt"
            android:layout_marginEnd="8dp" android:visibility="gone" android:onClick="whiteListMAC"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/MAC" android:scrollbars="vertical"
            android:visibility="gone">
    </ListView>
</android.support.constraint.ConstraintLayout>
