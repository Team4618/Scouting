<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="team4618.scoutingapp.client.MainActivity">

    <Button
            android:text="HotSpot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSelectHotSpot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnSelectBT"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnSelectBT"
            android:onClick="selectModeHotSpot"/>
    <Button
            android:text="Bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSelectBT"
            app:layout_constraintStart_toEndOf="@+id/btnSelectHotSpot" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.3"
            android:onClick="selectModeBT"/>
    <Button
            android:text="None"
            android:layout_width="wrap_content"
            android:layout_height="44dp" android:id="@+id/btnSelectNone"
            app:layout_constraintStart_toStartOf="@+id/btnSelectHotSpot" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:onClick="selectModeNone" app:layout_constraintStart_toEndOf="@+id/btnOptions"
            app:layout_constraintEnd_toEndOf="@+id/btnSelectHotSpot"/>
    <Button
            android:text="Options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnOptions"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnSelectNone"
            app:layout_constraintEnd_toEndOf="@+id/btnSelectBT" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/btnSelectBT" android:layout_marginStart="8dp"
            android:onClick="btnOptions"/>
</android.support.constraint.ConstraintLayout>
