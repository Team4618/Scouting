<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="team4618.scoutingapp.client.MainActivity">

    <Button
            android:text="Bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSelectBT"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.302"
            android:onClick="selectModeBT"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.2"/>
    <Button
            android:text="None"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSelectNone"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:onClick="selectModeNone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.3" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.8"/>
    <Button
            android:text="Adress List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnOptions"
            android:onClick="btnOptions"
            app:layout_constraintEnd_toEndOf="@+id/btnSelectBT" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/btnSelectNone" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>
