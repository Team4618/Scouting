<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="team4618.scoutingapp.client.MainActivity">

    <Button
            android:text="Bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSelectBT"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.302"
            android:onClick="selectModeBT"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
    />
    <Button
            android:text="None"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSelectNone"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:onClick="selectModeNone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.3" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.8" android:visibility="gone"/>
    <Button
            android:text="Adress List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnOptions"
            android:onClick="btnOptions"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.9"/>
    <Button
            android:text="Pit Scouting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnPitScouting"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnOptions"
            android:onClick="selctModePit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Verificafion"
            android:ems="10"
            android:id="@+id/verification"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textAlignment="center"/>
    <TextView
            android:text="Verification:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/verification"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/verification" android:textSize="18sp"/>


</android.support.constraint.ConstraintLayout>
